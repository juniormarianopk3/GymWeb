@model GymWeb.Models.Exercicio


<div class="col-md-8">

    <h2 align="left">Detalhes do Exercicio</h2>
    <br />
    <div >
        <img src="~/images/workout/@Model.Image" />
    </div>
   
    <h4 align="left">@Model.Nome</h4>
    <br />
    <ul class="list-group-flush">

        <li class="list-group-item">
            <b><label asp-for="AreaCorporal"> Grupo Muscular</label></b> :
            @Model.AreaCorporal
        </li>
        <li class="list-group-item">
            <b><label asp-for="QntSerie"> Séries</label></b> :
            @Model.QntSerie
        </li>
        <li class="list-group-item">
            <b><label asp-for="Repeticao"> Número de repetições</label></b> :
            @Model.Repeticao
        </li>
        <li class="list-group-item">
            <b><label asp-for="AreaCorporal"> Grupo Muscular</label></b> :
            @Model.AreaCorporal
        </li>
        <li class="list-group-item">
            <b><label asp-for="Preparacao"> Preparação</label></b> :
            @Model.Preparacao
        </li>
        <li class="list-group-item">
            <b><label asp-for="Execucao"> Como executar</label></b> :
            @Model.Execucao
        </li>
        <li class="list-group-item">
            <b><label asp-for="Dicas"> Dicas  </label></b> :
            @Model.Dicas
        </li>

    </ul>

</div>
<div class="col-md-8">
    <h4 align="left"> Músculos Alvos</h4>
    <hr />
    <ul class="list-group">
        <li class="list-unstyled">
            <img src="~/images/MusculoAtivo/@Model.ImageMusculoAlvo" />
        </li>

        <li class="list-unstyled">
            <b><label asp-for="MusculoPrimario"> Músculos primários :  </label></b>
            @Model.MusculoPrimario
        </li>
        <li class="list-unstyled">
            <b><label asp-for="MusculoSecundario"> Músculos Sinergistas :  </label></b>
            @Model.MusculoSecundario
        </li>
    </ul>

    <hr />
</div>

<div>
    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model?.Id">Editar</a>
    <a class="btn btn-secondary" asp-action="Index">Voltar a lista</a>
</div>
