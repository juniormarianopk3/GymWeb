@model GymWeb.Models.ViewModels.CreateTreinoViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Treino</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Dias" class="control-label"></label>
                <input asp-for="Dias" class="form-control" />
                <span asp-validation-for="Dias" class="text-danger"></span>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.checkBoxExercicios, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @for (int i = 0; i < Model.checkBoxExercicios.Count(); i++) {
                        @Html.EditorFor(m => Model.checkBoxExercicios[i].Checked)

                        <text>&nbsp;</text>
                        @Html.DisplayFor(m => Model.checkBoxExercicios[i].Nome)

                        <text>&nbsp;</text>
                        <br />
                        @Html.HiddenFor(m => Model.checkBoxExercicios[i].Nome)
                        @Html.HiddenFor(m => Model.checkBoxExercicios[i].Id)
                    }
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
